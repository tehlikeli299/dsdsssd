    const permsOnGuild = new perms(guild.permissions);
    if(!permsOnGuild.has("MANAGE_GUILD")) return;
  %>
   <% if (bot.guilds.cache.get(guild.id)) { %>
    <% var a = "Sunucuyu Yรถnet" %>
 
    <% } else { %>
        <% var a = "Sunucuya Ekle" %>
 
    <% } %>
        <% if (bot.guilds.cache.get(guild.id)) { %>
    <% var link = `/yonet?server=${guild.id}` %>
    <% } else { %>    
    <% var link = `https://discord.com/oauth2/authorize?scope=bot&response_type=code&redirect_uri=${bot.ayarlar.callbackURL}&permissions=8&client_id=${bot.user.id}&guild_id=${guild.id}` %>
    <% } %>
   <div class="kutu border">
<div class="container" style="margin-top: 20px;">
  <img src="https://cdn.discordapp.com/icons/<%=guild.id%>/<%=guild.icon%>.png?size=128" style="margin-right: 20px; width:104px;height:104px;border-radius: 150px;" onerror="this.onerror=null;this.src='https://cdn.discordapp.com/attachments/800474052509827082/807338869292269638/discord_101785.png'" alt="icon" class="w3-left w3-circle">
  <p style="color:#fff;"><%= bot.tools.kisalt(guild.name) %></p>
  <a style="color:#c9c2c2">
     <% if (bot.guilds.cache.get(guild.id)) { %>
     Bot sunucuda var.
    <% } else { %>
     Bot sunucuda yok.
      <% } %></a>
      <br> <br>
<a href="<%=link%>" type="button" style="text-align: center; line-height:44px; font-family: 'Quicksand', black; font-size: 18px; color: #fff;" class="div breezy"><%= a %></a>
</div>
</div>
